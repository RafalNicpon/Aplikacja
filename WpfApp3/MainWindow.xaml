<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Panel logowania" Height="550" Width="400" FontSize="25" Background="Gray">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator>
            </Separator>
            <Label Content="Login" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Hasło" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            
            
            
            
            <Button x:Name="MainButton" Width="350px" Content="Zaloguj się" Height="40" Click="MainButton_Click" Margin="00,20,0,0"/>
            <Button x:Name="RegistrationButton" Width="350px" Content="Zarejestruj się" Height="40" Click="RegistrationButton_Click" Margin="00,7,0,0"/>
            

        </StackPanel>
    </Grid>
</Window>

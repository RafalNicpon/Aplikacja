<Window x:Class="WpfApp3.ZmianaHasla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Zmiana Hasła" Height="550" Width="400" FontSize="14" Background="Gray">
    <Grid>
        <Label Content="Podaj stare hasło:" FontSize="20" Foreground="White" Margin="0,0,0,444"/>
        <TextBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" Margin="-2,52,2,437"/>
        <Label Content="Podaj nowe hasło:" FontSize="20" Foreground="White" Margin="0,95,0,349"/>
        <TextBox Name="txtNewPassword" Background="#545d6a" Foreground="White" FontSize="18" Margin="0,138,0,349"/>

        <Button x:Name="Start" Content="Start" FontSize="20" Click="Start_Click" Margin="58,444,229,32"/>
    <Button x:Name="Cofnij" Content="Cofnij" FontSize="20" Click="Cofnij_Click" Margin="224,444,63,32"/>
    <Button Content="Zmień hasło" Click="Zmień_Click" FontSize="20" Margin="115,354,120,122"/>
    </Grid>
</Window>
